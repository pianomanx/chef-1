{
  "name": "base",
  "description": "Drop The Bass",
  "run_list": [
    "recipe[robotozon]",
    "recipe[chef-client]",
    "recipe[chef-client::config]",
    "recipe[hostname]",
    "recipe[nodejs]",
    "recipe[ntp]",
    "recipe[openssh]",
    "recipe[sudo]",
    "recipe[timezone-ii]",
    "recipe[users::sysadmins]"
  ],
  "default_attributes": {
    "set_fqdn": "*.prod.robotozon.com",
    "authorization": {
      "sudo": {
        "passwordless": "true"
      }
    },
    "chef_client": {
      "interval": "300",
      "splay": "60"
    },
    "hostname_cookbook": {
      "use_node_ip": true
    },
    "ntp": {
      "servers": ["chef.prod.robotozon.com"]
    },
    "tz": "America/New_York"
  }
}

