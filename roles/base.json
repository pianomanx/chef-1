{
  "name": "base",
  "description": "Drop The Bass",
  "run_list": [
    "recipe[hostnames]",
    "recipe[nodejs]",
    "recipe[ntp]",
    "recipe[openssh]",
    "recipe[sudo]",
    "recipe[timezone-ii]",
    "recipe[users::sysadmins]"
  ],
  "default_attributes": {
    "set_fqdn": "*.robotozon.com",
    "authorization": {
      "sudo": {
        "passwordless": "true"
      }
    },
    "hostname_cookbook": {
      "use_node_ip": true
    },
    "nodejs": {
      "install_method": "source",
      "version": "4.4.2"
    },
    "ntp": {
      "servers": [
        "0.north-america.pool.ntp.org",
        "1.north-america.pool.ntp.org",
        "2.north-america.pool.ntp.org",
        "3.north-america.pool.ntp.org"
      ]
    },
    "openssh": {
      "server": {
        "permit_root_login": "no",
        "port": [ "22", "1471" ],
        "use_dns": "no",
        "password_authentication": "no"
      }
    },
    "tz": "America/New_York"
  }
}

