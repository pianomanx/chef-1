server{
  listen 80;

  server_name <%= @name %> <%= @name %>.<%= @domain %>;

  access_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-access.log;
  error_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO http;
  proxy_redirect off;

  return 301 https://<%= @name %>.<%= @domain %>;
}

server {
  listen 443 ssl;

  ssl_certificate /data/configs/nginx/ssl/live/<%= @domain %>/fullchain.pem;
  ssl_certificate_key /data/configs/nginx/ssl/live/<%= @domain %>/privkey.pem;

  server_name <%= @name %>.<%= @domain %>;

  access_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-access.log;
  error_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO https;
  proxy_redirect off;

  location / {
    if ($http_x_plex_device_name = '') {
      rewrite ^/$ http://$http_host/web/index.html;
    }

    if (!-f $request_filename){
      proxy_pass http://localhost:32400;
    }
  }

  location ^~ /.well-known/ {
    allow                 all;
  }
}

