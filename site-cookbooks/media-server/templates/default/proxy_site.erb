server {
  listen 80;
  server_name <%= @name %>.<%= @domain %>;

  access_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-access.log;
  error_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO http;

  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
  ssl_ecdh_curve secp384r1;
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off;
  ssl_stapling on;
  ssl_stapling_verify on;

  add_header Strict-Transport-Security "max-age=63072000; includeSubdomains";
  add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;

  ssl_certificate /data/configs/nginx/ssl/live/<%= @domain %>/fullchain.pem;
  ssl_certificate_key /data/configs/nginx/ssl/live/<%= @domain %>/privkey.pem;

  server_name <%= @name %>.<%= @domain %>;

  access_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-access.log;
  error_log /data/configs/nginx/logs/<%= @name %>.<%= @domain %>-error.log;

  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X_FORWARDED_PROTO https;

  location / {
  <% if @auth == true -%>
    satisfy                any;
    allow                  192.168.0.0/16;
    deny                   all;
    auth_basic             "Restricted";
    auth_basic_user_file   /data/configs/nginx/htpasswd;
  <% end -%>

    if (!-f $request_filename){
      proxy_pass http://localhost:<%= @port %>;
    }
  }

  location ^~ /.well-known/ {
    allow                 all;
  }
}

