user www;
worker_processes 2;
worker_rlimit_nofile 30000;

error_log  /var/log/nginx/error.log;
pid        /var/run/nginx.pid;

events {
  worker_connections 2048;
}

http {
  include /opt/local/etc/nginx/mime.types;
  default_type application/octet-stream;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;

  types_hash_bucket_size 64;
  server_names_hash_bucket_size 64;
  client_header_buffer_size 32k;
  client_body_buffer_size 8k;
  server_tokens off;

  keepalive_timeout 0;

  gzip                 off;
  gzip_http_version    1.0;
  gzip_comp_level      2;
  gzip_proxied         any;
  gzip_buffers         16 8k;
  gzip_types           text/plain application/x-javascript text/xml application/xml application/xml+rss text/javascript;

  log_format main '$remote_addr - $remote_user [$time_local] $request '
                  '"$status" $body_bytes_sent "$http_referer" '
                  '"$http_host" "$http_user_agent" "$gzip_ratio" '
                  '"$http_x_forwarded_for" '
                  'upstream_addr $upstream_addr '
                  'upstream_response_time $upstream_response_time '
                  'request_time $request_time';

  include /opt/local/etc/nginx/conf.d/*.conf;
  include /opt/local/etc/nginx/sites-enabled/*;
}

